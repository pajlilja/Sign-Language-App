<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="se.nugify.frixumpullum.app.MainActivity"
    android:orientation="horizontal"
    >

    <TextureView
        android:id="@+id/textureView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <ImageButton
        android:id="@+id/recordBorder"
        android:background="@drawable/rec_button_border"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="18dp"
        android:adjustViewBounds="false"
        android:alpha="0.9" />

    <View
        android:id="@+id/recButton"
        android:background="@drawable/red_circle"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="27dp"
        android:adjustViewBounds="false"
        android:alpha="0.9"/>

    <View
        android:id="@+id/boxView"
        android:background="@drawable/rectangle"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignTop="@+id/actual_content"
        android:layout_alignBottom="@id/actual_content"
        android:layout_alignLeft="@id/actual_content"
        android:layout_alignRight="@id/actual_content"
        android:alpha="0.8" />

    <LinearLayout
        android:id="@id/actual_content"
        android:layout_above="@+id/recordBorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="44dp"
        android:layout_centerHorizontal="true" >

        <TextView
            android:id="@+id/textView"
            android:text=""
            android:textColor="#000"
            android:textSize="26sp"
            android:alpha="0.7"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center" />

    </LinearLayout>

</RelativeLayout>
